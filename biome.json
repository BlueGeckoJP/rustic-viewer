{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "files": {
    "includes": [
      "**/*.{js,jsx,ts,tsx,json,css,scss,html,md,mdx}",
      "!src-wasm/pkg/*",
      "!**/node_modules",
      "!dist/**/*",
      "!src-tauri/**/*"
    ]
  }
}
